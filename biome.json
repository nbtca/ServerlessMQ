{
    "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
    "files": {
        "includes": [
            "backend/src/**/*",
            "frontend/src/**/*"
        ],
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true,
        "formatWithErrors": false,
        "indentStyle": "tab",
        "indentWidth": 2,
        "lineEnding": "lf",
        "lineWidth": 80
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "double",
            "trailingCommas": "es5",
            "semicolons": "always"
        }
    }
}